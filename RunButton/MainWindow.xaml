<Window x:Class="RunButton.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:RunButton"
        mc:Ignorable="d"
        Title="MainWindow" Height="600" Width="800" MinHeight="30" MinWidth="100" SizeChanged="Window_SizeChanged" Loaded="Window_Loaded">
    <Canvas x:Name="canvas" Height="570.4" Width="793.6">
        <Button x:Name="ButtonPushMe" Content="Push me" Canvas.Left="0" Canvas.Top="0" Width="100" Height="30" FontSize="20" Click="ButtonPushMe_Click" MouseEnter="ButtonPushMe_MouseEnter"/>
    </Canvas>
</Window>
